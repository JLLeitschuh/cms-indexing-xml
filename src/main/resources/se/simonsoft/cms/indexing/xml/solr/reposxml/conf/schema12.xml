<!-- Repos Search XML element index -->

<!-- TODO set stored="false" on some fields before release -->

<schema name="reposxml" version="1.2">

	<types>		
		<fieldtype name="string" class="solr.StrField" sortMissingLast="true" omitNorms="true" />
		
		<!-- For faster range queries, consider the tint/tfloat/tlong/tdouble types. -->
		<fieldType name="int" class="solr.TrieIntField" precisionStep="0" omitNorms="true" positionIncrementGap="0"/>
		<fieldType name="long" class="solr.TrieLongField" precisionStep="0" omitNorms="true" positionIncrementGap="0"/>
		
	</types>

	<fields>
		<!-- 
		Uniqueness, support for overwrite and join
		-->
		<field name="id" type="string" indexed="true" stored="true" required="true" />

		<!-- 
		CMS item fields, see items core for definitions.
		-->
		<field name="path"     type="string" indexed="true"  stored="true" required="true"/>
		<field name="pathname" type="string" indexed="true"  stored="false" />
		<field name="pathext"  type="string" indexed="true"  stored="false" />
		<field name="pathdir"  type="string" indexed="true"  stored="false" />
		<field name="rev"  type="long" indexed="true" stored="true" />
		<field name="revt" type="long" indexed="true" stored="true" required="true"/>		
		<field name="repo"       type="string" indexed="true" stored="true"/>
		<field name="repoparent" type="string" indexed="true" stored="true"/>
		<field name="repohost"   type="string" indexed="true" stored="true"/>
		<field name="repoarea"   type="string" indexed="true" stored="true"/> <!-- tentative -->
		
		<!-- 
		Document's versioned properteis
		-->
		<dynamicField name="prop_*" type="string" indexed="true" stored="true"/>

		<!--
		XML element name including namespace prefix if any. Namespace URI can be read from ia_*.
		-->
		<field name="name" type="string" indexed="true" stored="true" required="true" />

		<!-- 
		Position in DOM, indexes starting from 1 like in XSL
		-->	
		<field name="depth" type="int" indexed="true" stored="true" required="true"/>
		<field name="position" type="int" indexed="true" stored="true" required="true"/>
		
		<!-- 
		Position in tree for uniqueness within document, .N appended for each level, 1-based
		-->
		<field name="pos" type="string" indexed="true" stored="true" required="true"/>
		
		<!-- 
		Attributes, solr should accept with any valid xml attribute name including those containing ":".
		Includes namespace prefixes (name:) if any. Namespaces URIs can be read from ns_[name].
		-->
		<dynamicField name="a_*" type="string" indexed="true" stored="true" />
		<dynamicField name="ns_*" type="string" indexed="true" stored="true"/>
			
		<!-- 
		"Inherit" attributes, including self, near overrides far.
		-->
		<dynamicField name="ia_*" type="string" indexed="true" stored="true" />
		<!--
		All namespace declarations effective on the element.
		-->
		<dynamicField name="ins_*" type="string" indexed="true" stored="true"/>

		<!-- 
		Ancestor element names, excluding self
		-->
		<field name="aname" type="string" indexed="true" stored="true" multiValued="true" />
		
		<!-- 
		Joinable references to parent (null if root), previous sibling (null if first), next sibling (null if last)
		-->
		<field name="id_root" type="string" indexed="true" stored="true" />
		<field name="id_parent" type="string" indexed="true" stored="true" />
		<field name="id_sibp" type="string" indexed="true" stored="true" />
		<!-- can join the other way <field name="id_sibn" type="string" indexed="true" stored="true" /> -->
		
		<!--
		Verbatim element and its contents
		-->
		<field name="source" type="string" indexed="true" stored="true" />
		
		<!--
		Normalized text content of the entire element
		-->
		<field name="text" type="string" indexed="true" stored="true" />
		
		<!-- 
		Filtered source variations
		-->
		<dynamicField name="source_*" type="string" indexed="true" stored="true" />
		
		<!--
		Checksums of source variations
		-->
		<dynamicField name="c_md5_*" type="string" indexed="true" stored="true" />
		<dynamicField name="c_sha1_*" type="string" indexed="true" stored="true" />
		
		<!-- 
		Word count of source variations
		-->
		<dynamicField name="words_*" type="int" indexed="true" stored="true" />		
	</fields>

	<!-- field to use to determine and enforce document uniqueness. -->
	<uniqueKey>id</uniqueKey>

	<!-- field for the QueryParser to use when an explicit fieldname is absent -->
	<defaultSearchField>name</defaultSearchField>

	<!-- SolrQueryParser configuration: defaultOperator="AND|OR" -->
	<solrQueryParser defaultOperator="OR" />
</schema>

